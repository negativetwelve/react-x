{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=4",
    "yarn": ">=1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@react-x/babel-preset": "3.0.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.4.1",
    "eslint-config-jolt": "^2.6.1",
    "eslint-plugin-jest": "^21.0.2",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "lerna": "3.14.1",
    "lint-staged": "^4.0.3",
    "react": "16.8.3",
    "react-art": "16.8.3",
    "react-dom": "16.8.3",
    "react-native": "0.59.8",
    "react-native-web": "0.11.4",
    "rimraf": "^2.6.1"
  },
  "eslintConfig": {
    "extends": "jolt"
  },
  "eslintIgnore": [
    "build",
    "coverage",
    "node_modules"
  ],
  "jest": {
    "projects": [
      "test/jest-config.dom.js",
      "test/jest-config.native.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  },
  "workspaces": {
    "packages": [
      "components/*",
      "modules/*",
      "packages/*",
      "tools/*"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint .",
    "lint:cached": "yarn lint --cache",
    "precommit": "lint-staged",
    "test": "jest",
    "test:dom": "jest --config test/jest-config.dom.js",
    "test:native": "jest --config test/jest-config.native.js",
    "test:build": "yarn run build && yarn run test",
    "test:coverage": "yarn test --coverage"
  }
}
